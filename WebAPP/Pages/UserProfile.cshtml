@page
@model UserProfileModel
@{
    ViewData["Title"] = "Perfil de Usuario";
}

<div class="profile-page">
    <div class="sidebar">
        <ul>
            <li><a href="#">General</a></li>
            <li><a href="#">Comisiones</a></li>
            <li><a href="#">Reportes</a></li>
            <li><a href="#">Transferencias</a></li>
        </ul>
    </div>

    <div class="content">
        <h1>Mi Perfil</h1>
        <div class="profile-box">
            <div class="profile-header">
                <div class="profile-photo"></div>
                <div>
                    <h2 id="nombreUsuario">Usuario</h2>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <h4>Información Personal</h4>
                    <p><strong>Nombre:</strong> <span id="nombre"></span></p>
                    <p><strong>Primer Apellido:</strong> <span id="primerApellido"></span></p>
                    <p><strong>Segundo Apellido:</strong> <span id="segundoApellido"></span></p>
                    <p><strong>Dirección:</strong> <span id="direccion"></span></p>
                    <p><strong>Correo Electrónico:</strong> <span id="correo"></span></p>
                    <p><strong>Fecha de Nacimiento:</strong> <span id="fechaNacimiento"></span></p>
                </div>
                <div class="col-md-6">
                    <h4>Datos Financieros</h4>
                    <p><strong>Capital disponible:</strong> <span id="capitalDisponible"></span></p>
                    <p><strong>Inversiones activas:</strong> <a href="#">(link)</a></p>
                </div>
            </div>

            <div class="text-end mt-4">
                <button class="btn-edit">Editar Perfil</button>
            </div>
        </div>
    </div>
</div>

<style>
    body, html {
        background-color: black;
        color: white;
    }

    .profile-page {
        display: flex;
        flex-direction: row;
        margin-top: 20px;
    }

    .sidebar {
        background-color: #00D395;
        width: 220px;
        height: calc(100vh - 60px);
        padding-top: 30px;
    }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                margin: 20px 0;
                text-align: center;
            }

                .sidebar ul li a {
                    text-decoration: none;
                    color: black;
                    font-weight: bold;
                    font-size: 16px;
                }

    .content {
        flex: 1;
        padding: 30px;
    }

    .profile-box {
        background-color: #111;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
        max-width: 1000px;
        margin: 0 auto;
    }

    .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .profile-photo {
        width: 100px;
        height: 100px;
        background-color: white;
        border-radius: 50%;
        margin-right: 20px;
    }

    .btn-edit {
        background-color: #8F5AF5;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: bold;
    }

    a {
        color: #8F5AF5;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const user = JSON.parse(localStorage.getItem("usuario"));

        if (!user) {
            alert("Usuario no autenticado.");
            window.location.href = "/login";
            return;
        }

        document.getElementById("nombreUsuario").textContent = user.nombre;
        document.getElementById("nombre").textContent = user.nombre;
        document.getElementById("primerApellido").textContent = user.primerApellido;
        document.getElementById("segundoApellido").textContent = user.segundoApellido;
        document.getElementById("direccion").textContent = user.direccion;
        document.getElementById("correo").textContent = user.correo;
        document.getElementById("fechaNacimiento").textContent = user.fechaNacimiento.split("T")[0];

        // Mostrar balance si el usuario es Cliente
        if (user.rol.toLowerCase() === "cliente" && user.balanceFinanciero !== undefined) {
            document.getElementById("capitalDisponible").textContent = `$${user.balanceFinanciero.toFixed(2)}`;
        } else {
            document.getElementById("capitalDisponible").textContent = "No disponible";
        }
    });
</script>
