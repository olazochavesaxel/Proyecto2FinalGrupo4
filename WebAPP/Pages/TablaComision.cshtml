@page
@model WebAPP.Pages.TablaComisionModel
@{
    ViewData["Title"] = "Tabla Comision";
    Layout = "~/Pages/Shared/AdminLayout.cshtml";
}

<script src="~/js/Pages/ComisionTable.js"></script>

<div class="bs-docs-section">
    <div class="row">
        <legend>Lista de Comisiones</legend>
        <div class="col-lg-12">
            <table id="tblComision" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Tipo</th>
                        <th>Nombre</th>
                        <th>Porcentaje</th>
                        <th>Tarifa 1</th>
                        <th>Tarifa 2</th>
                        <th>Tarifa 3</th>
                        <th>Id Admin</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="bs-docs-section">
    <div class="row">
        <legend>Registrar Comisión</legend>
        <div class="col-lg-12">
            <form action="#" method="post" class="form-register">
                <fieldset>
                    <legend>Formulario de Comisión</legend>
                    <input type="hidden" id="txtComisionId" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="selectTipo" class="form-label mt-4">Tipo de Comisión</label>
                                <input type="text" class="form-control" id="comision-tipo" name="comision-tipo" placeholder="Ej: Venta, Servicio..." />
                            </div>
                            <div class="form-group">
                                <label for="txtNombreComision" class="form-label mt-4">Nombre</label>
                                <input type="text" class="form-control" id="comision-nombre" name="comision-nombre" placeholder="Nombre de la comisión" />
                            </div>
                            <div class="form-group">
                                <label for="txtPorcentaje" class="form-label mt-4">Porcentaje (%)</label>
                                <input type="number" step="0.01" class="form-control" id="comision-porcentaje" name="comision-porcentaje" placeholder="Ej. 10.5" />
                            </div>
                            <div class="form-group">
                                <label for="comision-max" class="form-label mt-4">Tarifa Máxima</label>
                                <input type="number" class="form-control" id="comision-max" name="comision-max" placeholder="Monto máximo" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="comision-min" class="form-label mt-4">Tarifa Mínima</label>
                                <input type="number" class="form-control" id="comision-min" name="comision-min" placeholder="Monto mínimo" />
                            </div>
                            <div class="form-group">
                                <label for="comision-impuesto" class="form-label mt-4">Impuesto (%)</label>
                                <input type="number" class="form-control" id="comision-impuesto" name="comision-impuesto" placeholder="Ej. 13" />
                            </div>
                            <div class="form-group">
                                <label for="txtAdminId" class="form-label mt-4">ID del Administrador</label>
                                <input type="number" class="form-control" id="txtAdminId" placeholder="ID del admin responsable" />
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <div id="mensaje-error"></div>
                        <button type="submit" id="btnCreate" class="btn btn-success">Registrar</button>
                        <button type="button" id="btnUpdate" class="btn btn-primary">Actualizar</button>
                        <button type="button" id="btnDelete" class="btn btn-danger">Eliminar</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

<style>
    form {
        background-color: white;
        padding: 30px 40px;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

        form legend {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }

        form .form-group {
            margin-bottom: 20px;
        }

        form label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #444;
        }

        form .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #f9f9f9;
            font-size: 14px;
            transition: border 0.3s ease;
        }

            form .form-control:focus {
                outline: none;
                border-color: #74b9ff;
                background-color: #fff;
            }

        form button {
            width: 100%;
            margin-top: 20px;
            padding: 12px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            form button.btn-success {
                background-color: #27ae60;
                border: none;
                color: white;
            }

                form button.btn-success:hover {
                    background-color: #2ecc71;
                }

            form button.btn-primary {
                background-color: #0984e3;
                border: none;
                color: white;
            }

                form button.btn-primary:hover {
                    background-color: #74b9ff;
                }

            form button.btn-danger {
                background-color: #e74c3c;
                border: none;
                color: white;
            }

                form button.btn-danger:hover {
                    background-color: #e67e22;
                }

    mensaje-error {
        color: #d63031;
        font-size: 14px;
        margin-top: 10px;
        min-height: 18px;
        text-align: center;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector(".form-register");
        const mensajeError = document.getElementById("mensaje-error");

        const campos = [
            { id: "comision-tipo", label: "Tipo de Comisión" },
            { id: "comision-nombre", label: "Nombre" },
            { id: "comision-porcentaje", label: "Porcentaje (%)" },
            { id: "comision-max", label: "Tarifa Máxima" },
            { id: "comision-min", label: "Tarifa Mínima" },
            { id: "comision-impuesto", label: "Impuesto (%)" },
        ];

        form.addEventListener("submit", function (event) {
            let errores = [];
            mensajeError.innerText = "";
            campos.forEach(({ id, label }) => {
                const input = document.getElementById(id);
                const valor = input.value.trim();
                input.classList.remove("error");
                if (!valor) {
                    errores.push(`El campo "${label}" es requerido.`);
                    input.classList.add("error");
                }
            });
            if (errores.length > 0) {
                event.preventDefault();
                mensajeError.innerText = errores.join("\n");
            }
        });

        campos.forEach(({ id }) => {
            const input = document.getElementById(id);
            input.addEventListener("input", () => {
                if (input.value.trim() !== "") {
                    input.classList.remove("error");
                }
            });
        });

        // Lógica del pop-out de sesión cerrada
        const usuarioData = sessionStorage.getItem("usuario");
        if (!usuarioData) {
            Swal.fire({
                icon: "warning",
                title: "Tu sesión ha sido cerrada",
                text: "Para ingresar nuevamente por favor inicia sesión.",
                confirmButtonColor: "#8F5AF5",
                backdrop: `rgba(0, 0, 0, 0.95)`
            }).then(() => {
                window.location.href = "/Index";
            });
        } else {
            try {
                JSON.parse(usuarioData);
            } catch (e) {
                sessionStorage.clear();
                Swal.fire({
                    icon: "warning",
                    title: "Sesión inválida",
                    text: "Para ingresar nuevamente por favor inicia sesión.",
                    confirmButtonColor: "#8F5AF5",
                    backdrop: `rgba(0, 0, 0, 0.95)`
                }).then(() => {
                    window.location.href = "/Index";
                });
            }
        }
    });
</script>
