@page
@model InterfazLogInP2.Pages.loginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="login-container">
    <div class="login-box">
        <div class="profile-picture">
            <img src="~/img/ph.png" alt="Foto de perfil">
        </div>
        <h2>¡Bienvenido de nuevo!</h2>
        <form>
            <div class="form-group">
                <label for="email">Correo</label>
                <input type="email" id="email" class="form-control" placeholder="Correo electrónico">
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" class="form-control" placeholder="Contraseña">
            </div>
            <div class="forgot-password">
                <a href="/RecuperarContrasenna" class="link-purple">¿Olvidaste la contraseña?</a>

                <a href="/Register" class="link-purple">¿No tienes cuenta?</a>
            </div>
            <button type="submit" class="btn btn-green">Iniciar Sesión</button>
        </form>
    </div>
    <div class="background-section"></div>
</div>

<style>
    .login-container {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: black;
        text-align: center;
    }

    .login-box {
        background: black;
        color: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0px 6px 12px rgba(255, 255, 255, 0.1);
        width: 400px;
    }

    .profile-picture {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

        .profile-picture img {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            border: 2px solid white;
        }

    .form-group {
        text-align: left;
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: none;
    }

    .forgot-password {
        margin: 10px 0;
    }

    .link-purple {
        color: #8F5AF5;
        text-decoration: none;
        font-weight: bold;
    }

        .link-purple:hover {
            text-decoration: underline;
        }

    .btn-green {
        background: #00D395;
        color: black;
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
        font-weight: bold;
    }

        .btn-green:hover {
            background: #00FFB4;
        }
</style>

<script>
    document.querySelector(".btn-green").addEventListener("click", async function (e) {
        e.preventDefault();

        const correo = document.getElementById("email").value;
        const contrasena = document.getElementById("password").value;

        if (!correo || !contrasena) {
            alert("Por favor, completa ambos campos.");
            return;
        }

        try {

            const response = await fetch("https://localhost:7057/api/auth/validar", {



                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ correo, contrasena })
            });

            if (response.ok) {
                const data = await response.json();
                const usuario = data.usuario;
                const rol = usuario.rol.toLowerCase();

                // Guardar el usuario en localStorage
                sessionStorage.setItem("usuario", JSON.stringify(usuario));


                // Redirigir según el rol
                if (rol === "cliente") {
                    window.location.href = "/UserProfile";
                } else if (rol === "asesor") {
                    window.location.href = "/UserAdvisorProfile";
                } else if (rol === "admin") {
                    window.location.href = "/UserAdminProfile";
                } else {
                    alert("Rol desconocido. Contacte al administrador.");
                }
            } else {
                const errorText = await response.text();
                console.log("Respuesta del servidor:", response.status, errorText);
                alert("Error al iniciar sesión: " + errorText);
            }
        } catch (error) {
            console.error("Error de red:", error);
            alert("Ocurrió un error al procesar el login.");
        }
    });
</script>




