@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<div class="home-container">
    <div class="content-section">
        <h1>Gestiona tus transacciones e inversiones de forma segura</h1>
        <button class="btn-start" onclick="openPopup()">Inicia aquí</button>
    </div>
</div>

<!-- POPUP -->
<div id="popup" class="popup-container">
    <div class="popup-content">
        <span class="close-btn" onclick="closePopup()">×</span>
        <h2>¿Ya tienes cuenta o eres nuevo?</h2>
        <div class="popup-buttons">
            <a href="/Login" class="popup-btn popup-login">Tengo cuenta</a>
            <a href="/Register" class="popup-btn popup-register">Soy nuevo</a>
        </div>
    </div>
</div>

<!-- ESTILOS CSS -->
<style>
    .home-container {
        background: black;
        height: 100vh;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

    .content-section {
        color: white;
        font-size: 24px;
    }

    .btn-start {
        background: #8F5AF5;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        border: none;
        cursor: pointer;
        font-size: 18px;
    }

    /* ---- POPUP ---- */
    .popup-container {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        justify-content: center;
        align-items: center;
    }

    .popup-content {
        background: black;
        padding: 30px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.2);
        color: white;
        width: 350px;
    }

        .popup-content h2 {
            margin-bottom: 20px;
        }

    .popup-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .popup-btn {
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        width: 120px;
    }

    .popup-login {
        background: #00D395;
        color: black;
    }

    .popup-register {
        background: #8F5AF5;
        color: white;
    }

    .close-btn {
        position: absolute;
        right: 15px;
        top: 10px;
        font-size: 24px;
        cursor: pointer;
        color: white;
    }
</style>

<!-- SCRIPT PARA MANEJAR EL POPUP -->
<script>
    function openPopup() {
        document.getElementById("popup").style.display = "flex";
    }

    function closePopup() {
        document.getElementById("popup").style.display = "none";
    }
</script>
