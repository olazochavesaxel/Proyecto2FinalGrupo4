<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - FinancialWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <link href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>
    <script src="~/js/ControlActions.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        html, body {
            background-color: black;
            color: white;
            margin: 0;
            padding: 0;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: black;
            padding: 15px 30px;
        }

            .navbar .nav-link, .navbar-brand {
                color: white !important;
                font-size: 18px;
            }

        .btn-login {
            background: #00D395;
            color: black !important;
            padding: 8px 15px;
            border-radius: 20px;
            text-decoration: none;
        }

        .btn-register {
            background: #8F5AF5;
            color: white !important;
            padding: 8px 15px;
            border-radius: 20px;
            text-decoration: none;
        }

        .container-fluid {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        footer {
            background-color: black !important;
            color: white !important;
            text-align: center;
            padding: 20px;
            width: 100%;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Index">FinancialWebApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link btn-login" asp-page="/Login">Iniciar Sesión</a></li>
                    <li class="nav-item"><a class="nav-link btn-register" asp-page="/Register">Registrarse</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Help">Ayuda</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Contact">Contacto</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Privacy">Privacidad</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/AboutUs">About Us</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/TechPulseGeneralInfo">Info General</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; 2025 FinancialWebApp - Todos los derechos reservados</p>
    </footer>
</body>
</html>


